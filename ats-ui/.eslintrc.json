{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:jsx-a11y/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "jsx-a11y"
    ],
    "rules": {
        "react/prop-types": 0,
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "arrow-body-style": [
            "error", 
            "always"
        ],
        "no-mixed-spaces-and-tabs":0,
        "no-console":0,
        "no-unused-vars":0,
        "jsx-a11y/alt-text": 2,
        "arrow-body-style":0,
        "validateLineBreaks": "LF"
    }
}